# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# iFlytek OTS Translation Service
# Get these credentials from: https://www.xfyun.cn/
IFLYTEK_APP_ID=your_app_id_here
IFLYTEK_API_SECRET=your_api_secret_here
IFLYTEK_API_KEY=your_api_key_here
IFLYTEK_HOST_URL=https://ntrans.xfyun.cn/v2/ots
IFLYTEK_HOST=api-dx.xf-yun.com
IFLYTEK_TIMEOUT=30000
IFLYTEK_RETRY_ATTEMPTS=3
IFLYTEK_RETRY_DELAY=1000

# Audio Generation
AUDIO_OUTPUT_DIR=./audio

# Murf.ai TTS Service (Fallback - Optional)
MURF_API_KEY=your_murf_api_key_here
MURF_VOICE_ID=your_preferred_voice_id

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Paths
NEWS_DATA_DIR=./news_data
LOGS_DIR=./logs
SCREENSHOTS_DIR=./screenshots

# Performance Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000
MAX_TEXT_LENGTH=10000
MAX_AUDIO_LENGTH=300000

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_INPUT_SANITIZATION=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3001
HEALTH_CHECK_INTERVAL=60000